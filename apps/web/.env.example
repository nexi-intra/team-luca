# Authentication Provider
# Options: none, entraid, supabase (default: entraid)
AUTH_PROVIDER=entraid

# Microsoft Entra ID Authentication (required when AUTH_PROVIDER=entraid)
NEXT_PUBLIC_AUTH_CLIENT_ID=your_client_id_here
NEXT_PUBLIC_AUTH_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
NEXT_PUBLIC_AUTH_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_AUTH_POST_LOGOUT_URI=http://localhost:3000

# Supabase Authentication (required when AUTH_PROVIDER=supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Session Secret (generate a random string, minimum 32 characters)
# Required for all authentication providers
SESSION_SECRET=your-super-secret-session-key-make-it-very-long-and-random

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenTelemetry Configuration (optional)
OTEL_SERVICE_NAME=magic-button-assistant-xxx
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:14268/api/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:9464/v1/metrics
OTEL_EXPORTER_OTLP_HEADERS={}
OTEL_SAMPLING_RATE=1.0

# Node Environment
NODE_ENV=development

# Logging Configuration
# Levels: VERBOSE, INFO, WARN, ERROR, NONE
# NEXT_PUBLIC_LOG_LEVEL is for client-side logging
# LOG_LEVEL is for server-side logging
NEXT_PUBLIC_LOG_LEVEL=INFO
LOG_LEVEL=INFO

# Koksmat Companion Configuration (optional)
NEXT_PUBLIC_KOKSMAT_COMPANION_URL=http://localhost:2512

# PowerShell Scripts Configuration
# Path to the scripts directory (default: .scripts in project root)
SCRIPTS_PATH=.scripts

# GitHub OAuth Configuration (optional)
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:50001/api/auth/github/callback